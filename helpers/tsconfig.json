{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": ".",
    "paths": {
      "@helpers/*": ["src/*"],
      "@orm/*": ["../orm/src/*"],
      "@parser-rss/*": ["../parser-rss/*"],
      "@router-api/*": ["../router-api/src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "../orm/src/**/*.ts",
    "../parser-rss/**/*.ts",
    "../router-api/src/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
