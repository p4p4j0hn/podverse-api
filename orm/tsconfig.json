{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": ".",
    "paths": {
      "@router-api/*": ["../router-api/src/*"],
      "@orm/*": ["src/*"]
    }
  },
  "include": [
    "../orm/src/**/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
